<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>GetConfigServlet</servlet-name>
		<servlet-class>com.leads.GetConfigServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetItemListServlet</servlet-name>
		<servlet-class>com.leads.GetItemListServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetItemServlet</servlet-name>
		<servlet-class>com.leads.GetItemServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SaveItemServlet</servlet-name>
		<servlet-class>com.leads.SaveItemServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetConfigServlet</servlet-name>
		<url-pattern>/api/getConfig</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
		<servlet-name>GetItemListServlet</servlet-name>
		<url-pattern>/api/getItemList</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetItemServlet</servlet-name>
		<url-pattern>/api/getItem</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SaveItemServlet</servlet-name>
		<url-pattern>/api/saveItem</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
